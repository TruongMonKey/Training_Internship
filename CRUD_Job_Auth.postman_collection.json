{
    "info": {
        "_postman_id": "crud-job-auth",
        "name": "CRUD Job - Authentication API",
        "description": "Collection for testing JWT Authentication APIs",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "item": [
        {
            "name": "Auth",
            "item": [
                {
                    "name": "Register",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json",
                                "type": "text"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"username\": \"newuser\",\n  \"password\": \"password123\",\n  \"confirmPassword\": \"password123\"\n}"
                        },
                        "url": {
                            "raw": "{{base_url}}/api/auth/register",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "api",
                                "auth",
                                "register"
                            ]
                        }
                    },
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "exec": [
                                    "if (pm.response.code === 201 || pm.response.code === 200) {",
                                    "    var jsonData = pm.response.json();",
                                    "    pm.environment.set(\"access_token\", jsonData.data.accessToken);",
                                    "    pm.environment.set(\"refresh_token\", jsonData.data.refreshToken);",
                                    "    pm.environment.set(\"user_id\", jsonData.data.userId);",
                                    "    console.log('Tokens saved successfully');",
                                    "}"
                                ]
                            }
                        }
                    ]
                },
                {
                    "name": "Login",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json",
                                "type": "text"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"username\": \"newuser\",\n  \"password\": \"password123\"\n}"
                        },
                        "url": {
                            "raw": "{{base_url}}/api/auth/login",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "api",
                                "auth",
                                "login"
                            ]
                        }
                    },
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "exec": [
                                    "if (pm.response.code === 200) {",
                                    "    var jsonData = pm.response.json();",
                                    "    pm.environment.set(\"access_token\", jsonData.data.accessToken);",
                                    "    pm.environment.set(\"refresh_token\", jsonData.data.refreshToken);",
                                    "    pm.environment.set(\"user_id\", jsonData.data.userId);",
                                    "    console.log('Login successful, tokens saved');",
                                    "}"
                                ]
                            }
                        }
                    ]
                },
                {
                    "name": "Refresh Token",
                    "request": {
                        "method": "POST",
                        "header": [],
                        "url": {
                            "raw": "{{base_url}}/api/auth/refresh?refreshToken={{refresh_token}}",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "api",
                                "auth",
                                "refresh"
                            ],
                            "query": [
                                {
                                    "key": "refreshToken",
                                    "value": "{{refresh_token}}"
                                }
                            ]
                        }
                    },
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "exec": [
                                    "if (pm.response.code === 200) {",
                                    "    var jsonData = pm.response.json();",
                                    "    pm.environment.set(\"access_token\", jsonData.data.accessToken);",
                                    "    pm.environment.set(\"refresh_token\", jsonData.data.refreshToken);",
                                    "    console.log('Token refreshed successfully');",
                                    "}"
                                ]
                            }
                        }
                    ]
                },
                {
                    "name": "Verify Token",
                    "request": {
                        "method": "GET",
                        "header": [],
                        "url": {
                            "raw": "{{base_url}}/api/auth/verify?token={{access_token}}",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "api",
                                "auth",
                                "verify"
                            ],
                            "query": [
                                {
                                    "key": "token",
                                    "value": "{{access_token}}"
                                }
                            ]
                        }
                    }
                }
            ]
        },
        {
            "name": "Jobs",
            "item": [
                {
                    "name": "Get All Jobs",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{access_token}}",
                                "type": "text"
                            }
                        ],
                        "url": {
                            "raw": "{{base_url}}/api/jobs",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "api",
                                "jobs"
                            ]
                        }
                    }
                },
                {
                    "name": "Create Job (Admin Only)",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json",
                                "type": "text"
                            },
                            {
                                "key": "Authorization",
                                "value": "Bearer {{access_token}}",
                                "type": "text"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"title\": \"Senior Developer\",\n  \"company\": \"Tech Corp\",\n  \"location\": \"Ho Chi Minh\",\n  \"salary\": 50000,\n  \"type\": \"FULL_TIME\",\n  \"status\": \"ACTIVE\",\n  \"description\": \"Looking for an experienced developer\"\n}"
                        },
                        "url": {
                            "raw": "{{base_url}}/api/jobs",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "api",
                                "jobs"
                            ]
                        }
                    }
                }
            ]
        }
    ],
    "variable": [
        {
            "key": "base_url",
            "value": "http://localhost:8080",
            "type": "string"
        },
        {
            "key": "access_token",
            "value": "",
            "type": "string"
        },
        {
            "key": "refresh_token",
            "value": "",
            "type": "string"
        },
        {
            "key": "user_id",
            "value": "",
            "type": "string"
        }
    ]
}